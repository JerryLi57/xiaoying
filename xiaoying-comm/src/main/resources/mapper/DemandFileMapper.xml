<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lolaage.crm.service.dao.mapper.DemandFileMapper">

    <!-- 通用查询结果列 -->
    <sql id="baseColumnList">
        t.f_id AS id,
        t.f_demand_id AS demandId,
        t.f_file_id AS fileId,
        t.f_create_time AS createTime,
        t.f_isdeleted AS isdeleted,
        t.f_update_time AS updateTime
    </sql>

    <!-- 使用对象类型传参 -->
    <select id="listPageByDto" parameterType="com.lolaage.crm.service.dto.request.DemandFileQueryDto" resultType="com.lolaage.crm.service.dto.response.DemandFileListDto">
        SELECT <include refid="baseColumnList" /> FROM t_demand_file t where t.f_isdeleted=0
        <if test="dto != null">
            <!-- 这里写自己的条件拼装 -->

        </if>
        ORDER BY t.f_update_time DESC
    </select>

</mapper>